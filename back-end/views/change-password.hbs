<!-- views/change-password.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Đổi Mật Khẩu</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center">

<div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
  <a href="/" class="text-blue-500 text-2xl">
    <i class="fas fa-home"></i> <!-- Biểu tượng trang chủ -->
  </a>
  <h1 class="text-3xl font-semibold text-center mb-6 text-gray-800">Đổi Mật Khẩu</h1>

  <form action="/users/change-password/{{user.id}}" method="POST">
    <div class="mb-4">
      <label for="oldPassword" class="block text-sm font-medium text-gray-700">Mật khẩu cũ</label>
      <input type="password" id="oldPassword" name="oldPassword" class="w-full p-2 mt-2 border border-gray-300 rounded-md" required>
    </div>

    <div class="mb-4">
      <label for="newPassword" class="block text-sm font-medium text-gray-700">Mật khẩu mới</label>
      <input type="password" id="newPassword" name="newPassword" class="w-full p-2 mt-2 border border-gray-300 rounded-md" required>
    </div>

    <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">Đổi mật khẩu</button>
  </form>

  {{#if message}}
    <div class="mt-4 text-red-600">{{message}}</div>  <!-- Hiển thị thông báo lỗi nếu có -->
  {{/if}}

</div>

</body>
</html>
